    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ButtonBackgroundColor">Transparent</Color>
    <SolidColorBrush x:Key="ButtonBackgroundColorBrush"
                     Color="{StaticResource ButtonBackgroundColor}" />

    <Color x:Key="ButtonHoverBackgroundColor">#00a3cc</Color>
    <SolidColorBrush x:Key="ButtonHoverBackgroundColorBrush"
                     Color="{StaticResource ButtonHoverBackgroundColor}" />


    <Color x:Key="ButtonBorderColor">Transparent</Color>
    <SolidColorBrush x:Key="ButtonBorderColorBrush"
                     Color="{StaticResource ButtonBorderColor}" />


    <Color x:Key="ButtonBackgroundTextColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="ButtonBackgroundTextColorBrush"
                     Color="{StaticResource ButtonBackgroundTextColor}" />

    <Color x:Key="ButtonHoverBackgroundTextColor">#e6faff</Color>
    <SolidColorBrush x:Key="ButtonHoverBackgroundTextColorBrush"
                     Color="{StaticResource ButtonHoverBackgroundTextColor}" />
    

</ResourceDictionary>

