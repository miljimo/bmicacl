    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Region (Secondary Colors)-->
    <Color x:Key="SecondaryColor">#4da6ff</Color>
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}" />

    <Color x:Key="SecondaryLightColor">#80bfff</Color>
    <SolidColorBrush x:Key="SecondaryLightColorBrush" Color="{StaticResource SecondaryLightColor}" />

    <Color x:Key="SecondaryDarkColor">#1a8cff</Color>
    <SolidColorBrush x:Key="SecondaryDarkColorBrush" Color="{StaticResource SecondaryDarkColor}" />

    <Color x:Key="SecondaryTextColor">#ffffff</Color>
    <SolidColorBrush x:Key="SecondaryTextColorBrush"     Color="{StaticResource SecondaryTextColor}" />


    <Color x:Key="NotificationTextColor">#0099ff</Color>
    <SolidColorBrush x:Key="NotificationTextColorBrush"     Color="{StaticResource NotificationTextColor}" />

    <Color x:Key="ErrorTextColor">#ff471a</Color>
    <SolidColorBrush x:Key="ErrorTextColorBrush"     Color="{StaticResource ErrorTextColor}" />

    <Color x:Key="HintTextColor">#808080</Color>
    <SolidColorBrush x:Key="HintTextColorBrush"     Color="{StaticResource HintTextColor}" />

    
</ResourceDictionary>

